{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "vitest/globals"],
    "lib": ["ES2022"]
  },
  "include": ["tests/**/*", "vitest.config.js"],
  "exclude": ["node_modules"]
}